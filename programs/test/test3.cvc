extern void printFloat(float f);

export void main()
{
	float[5] x = [3.1415, -1.0, 0.0, 1.337, 303.03];
	
	float sum(float[k] a)
	{
		float sum = 0.0;
		
		for (int i = 0, k)
		{
			sum = sum + a[k];
		}
		
		return sum;
	}
	
	float average(float[k] a)
	{
		float av;
		
		if (k > 0)
		{
			av = sum(a) / (float) k;
		}
		else
		{
			av = 0.0;
		}
		
		return av;
	}
	
	float getIth(float[k] a, int i)
	{
		float r = 0.0;
		if (i >= 0 && i < k)
		{
			r = a[i];
		}
		return r;
	}
	
	printFloat(average(x));
	printFloat(sum([1.23, -4.55, 0.22]));
	printFloat(getIth(x, 2));
}

